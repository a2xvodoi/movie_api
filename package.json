  "license": "MIT",
  "scripts": {
    "tsc-init": "tsconfig.json",
    "build": "rm -rf dist && tsc",
    "server": "nodemon --inspect dist/index.js",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typeorm": "typeorm-ts-node-commonjs",
    "watch": "tsc -w",
    "migration::generate": "typeorm-ts-node-commonjs migration:generate src/migration/update-post-table -d src/config/DataSource.ts",
    "migration::run": "typeorm-ts-node-commonjs migration:run -d  dist/config/DataSource.js"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.6",
    "@types/node": "^18.14.0",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.12",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  }
